{
	"info": {
		"_postman_id": "icore-kra-inventory-movements-collection",
		"name": "ICORE KRA Inventory Movements API",
		"description": "Postman collection for testing ICORE Tax Gateway KRA Inventory Movement endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Send Inventory Movement (Stock In)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "X-API-Key",
						"value": "{{api_key}}",
						"description": "Your API key for authentication"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"gatewayDeviceId\": \"{{device_id}}\",\n  \"taxpayerPin\": \"{{taxpayer_pin}}\",\n  \"branchId\": \"00\",\n  \"itemClassificationCode\": \"3026530000\",\n  \"itemCode\": \"KE2BEXUXXX0000001\",\n  \"quantity\": 50,\n  \"updateDate\": \"20250705103000\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/v1/inventory/movements",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"inventory",
						"movements"
					]
				},
				"description": "Send inventory movement data to KRA for stock in tracking"
			},
			"response": []
		},
		{
			"name": "Send Inventory Movement (Stock Out)",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "X-API-Key",
						"value": "{{api_key}}",
						"description": "Your API key for authentication"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"gatewayDeviceId\": \"{{device_id}}\",\n  \"taxpayerPin\": \"{{taxpayer_pin}}\",\n  \"branchId\": \"00\",\n  \"itemClassificationCode\": \"3026530000\",\n  \"itemCode\": \"KE2BEXUXXX0000001\",\n  \"quantity\": -25,\n  \"updateDate\": \"20250705103000\"\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/v1/inventory/movements",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"inventory",
						"movements"
					]
				},
				"description": "Send inventory movement data to KRA for stock out tracking (negative quantity)"
			},
			"response": []
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Set default values if not already set",
					"if (!pm.environment.get('base_url')) {",
					"    pm.environment.set('base_url', 'http://localhost:8000');",
					"}",
					"if (!pm.environment.get('api_key')) {",
					"    pm.environment.set('api_key', 'your-api-key-here');",
					"}",
					"if (!pm.environment.get('device_id')) {",
					"    pm.environment.set('device_id', 'your-device-id-here');",
					"}",
					"if (!pm.environment.get('taxpayer_pin')) {",
					"    pm.environment.set('taxpayer_pin', 'your-taxpayer-pin-here');",
					"}"
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000",
			"type": "string"
		},
		{
			"key": "api_key",
			"value": "your-api-key-here",
			"type": "string"
		},
		{
			"key": "device_id",
			"value": "your-device-id-here",
			"type": "string"
		},
		{
			"key": "taxpayer_pin",
			"value": "your-taxpayer-pin-here",
			"type": "string"
		}
	]
} 