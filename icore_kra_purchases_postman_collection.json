{
	"info": {
		"_postman_id": "icore-kra-purchases-collection",
		"name": "ICORE KRA Purchases API",
		"description": "Postman collection for testing ICORE Tax Gateway KRA Purchase Management endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Send Purchase Data",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "X-API-Key",
						"value": "{{api_key}}",
						"description": "Your API key for authentication"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"gatewayDeviceId\": \"{{device_id}}\",\n  \"taxpayerPin\": \"{{taxpayer_pin}}\",\n  \"purchaseHeader\": {\n    \"invoiceId\": \"INV20250704120000\",\n    \"invoiceDate\": \"20250704\",\n    \"customerName\": \"John Doe\",\n    \"customerPin\": \"A123456789B\",\n    \"totalAmount\": 1500.00,\n    \"taxAmount\": 225.00,\n    \"paymentMethod\": \"CASH\",\n    \"currency\": \"KES\"\n  },\n  \"purchaseItems\": [\n    {\n      \"itemCode\": \"ITEM001\",\n      \"itemName\": \"Sample Product\",\n      \"quantity\": 2,\n      \"unitPrice\": 750.00,\n      \"totalPrice\": 1500.00,\n      \"taxRate\": 15.00,\n      \"taxAmount\": 225.00,\n      \"itemCategory\": \"GENERAL\"\n    }\n  ]\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/v1/purchases",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"purchases"
					]
				},
				"description": "Send purchase data to KRA for registration and tax calculation"
			},
			"response": []
		},
		{
			"name": "Get Purchase Data",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "X-API-Key",
						"value": "{{api_key}}",
						"description": "Your API key for authentication"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/v1/purchases?gatewayDeviceId={{device_id}}&taxpayerPin={{taxpayer_pin}}&invoiceId=INV20250704120000",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"v1",
						"purchases"
					],
					"query": [
						{
							"key": "gatewayDeviceId",
							"value": "{{device_id}}",
							"description": "Gateway device ID"
						},
						{
							"key": "taxpayerPin",
							"value": "{{taxpayer_pin}}",
							"description": "Taxpayer PIN"
						},
						{
							"key": "invoiceId",
							"value": "INV20250704120000",
							"description": "Optional: Filter by invoice ID"
						},
						{
							"key": "startDate",
							"value": "20250701",
							"description": "Optional: Filter by start date (YYYYMMDD)"
						},
						{
							"key": "endDate",
							"value": "20250731",
							"description": "Optional: Filter by end date (YYYYMMDD)"
						}
					]
				},
				"description": "Retrieve purchase data from KRA with optional filtering"
			},
			"response": []
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"// Set default values if not already set",
					"if (!pm.environment.get('base_url')) {",
					"    pm.environment.set('base_url', 'http://icore-tax-gateway.test');",
					"}",
					"if (!pm.environment.get('api_key')) {",
					"    pm.environment.set('api_key', 'nO9mZEMMcDNc7MMEueAw6pi465pdJaIAID7ziseG6bHkidDYw0lUJBDp7zbj');",
					"}",
					"if (!pm.environment.get('device_id')) {",
					"    pm.environment.set('device_id', 'fd300bb4-a028-40ac-9492-675a461c093b');",
					"}",
					"if (!pm.environment.get('taxpayer_pin')) {",
					"    pm.environment.set('taxpayer_pin', 'P123456789Z');",
					"}"
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000",
			"type": "string"
		},
		{
			"key": "api_key",
			"value": "your-api-key-here",
			"type": "string"
		},
		{
			"key": "device_id",
			"value": "your-device-id-here",
			"type": "string"
		},
		{
			"key": "taxpayer_pin",
			"value": "your-taxpayer-pin-here",
			"type": "string"
		}
	]
} 